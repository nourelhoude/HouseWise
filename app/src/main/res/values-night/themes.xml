<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Custom colors -->
    <color name="custom_green">#00FF00</color>
    <color name="custom_red">#FF0000</color>
    <color name="custom_blue">#0000FF</color>

    <!-- Base application theme. -->
    <style name="Base.Theme.Ekrili" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Add custom style for the Spinner -->
        <item name="spinnerStyle">@style/CustomSpinnerStyle</item>
    </style>

    <!-- Custom style for the Spinner -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- Add your custom attributes here -->
        <item name="android:background">@drawable/spinner_background</item> <!-- Customize your spinner background if needed -->
        <item name="android:padding">8dp</item> <!-- Adjust padding as needed -->
        <item name="android:spinnerMode">dropdown</item> <!-- Dropdown mode is recommended for spinners with shadows -->
        <item name="android:textColor">@color/custom_green</item> <!-- Customize text color -->
    </style>
</resources>
